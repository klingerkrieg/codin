{% extends "template/dashboard.html" %}

{% block head %}
<script src="{{base_url()}}assets/professor.js"></script>
{% endblock %}

{% block title %}

{% include 'professores/breadcrumb.html' %}

{% endblock %}

{% block menu_lateral %}

{% endblock %}

{% block content %}

{% include 'professores/cadTarefa.html' %}

<input type="hidden" id="idturma" value="{{turma.idturma}}">

<main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-grid demo-content">
        <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
        <div>


            <div class="row">
                <div class="input-field col s12">
                    <a href="#cadTarefa"            onclick="editarTarefa({{tarefa.idtarefa}});" class="mdl-button mdl-js-button mdl-js-ripple-effect modal-trigger">Editar</a>
                    <a href="#confirmDeleteTarefa"  onclick="selectTarefa({{tarefa.idtarefa}})" class="mdl-button mdl-js-button mdl-js-ripple-effect modal-trigger">Excluir</a>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    {{tarefa.texto|e}}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                {% for arq in arquivos %}
                <a target="_BLANK" href="{{base_url()}}{{arq.caminho}}" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                <img src="{{base_url('assets/imgs/')}}{{arq.ext}}.png"> {{arq.nome}}
                </a>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</main>

{% for aluno in alunos %}

<main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-grid demo-content">
        <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
            <div>
            <div class="row">
                <div class="input-field col s12">
                {{aluno.nome|e}} -  {{aluno.email|e}}
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">

                {% if voltar %}
                    <a href="{{base_url('tarefas/index/' ~ tarefa.idtarefa ~ voltar)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                        <img src="{{base_url('assets/imgs/back_folder.png')}}"> ..
                    </a>
                {% endif %}
                
                {% for resp in aluno.respostas %}
                    <div>
                    {% if resp.ext == "folder" %}
                        <a href="{{base_url("tarefas/index/" ~ tarefa.idtarefa ~ "/" ~ resp.idusuario ~ resp.caminho_exec)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect tooltipped" data-position="right" data-tooltip="{{resp.data}}">
                    {% else %}
                        <a target="_BLANK" href="{{base_url('uploads/' ~ tarefa.idtarefa ~ resp.caminho_exec)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect tooltipped" data-position="right" data-tooltip="{{resp.data}}">
                    {% endif %}

                    <img src="{{base_url('assets/imgs/' ~ resp.ext ~ '.png')}}"> {{resp.nome}}
                    </a>

                    {% if resp.can_read %}
                        <a href="{{base_url('alunoturma/verarquivo/' ~ tarefa.idtarefa ~ '/' ~ resp.idarquivo)}}">
                            <img src="{{base_url('assets/imgs/view.png')}}" />
                        </a>
                    {% endif %}
                    </div>
                {% endfor %}
                
                </div>
            </div> 
            </div>
        </div>
    </div>
</main>
{% endfor %}

{% endblock %}