{% extends "template/dashboard.html" %}

{% block head %}
<script src="{{base_url()}}assets/aluno.js"></script>
{% endblock %}

{% block title %}

<a href="{{base_url('home')}}">Home</a> >> 
<a href="{{base_url('alunoturma/index/' ~ turma.chave)}}">{{turma.nome|e}}</a>  >> 
<a href="{{base_url('alunoturma/tarefa/' ~ tarefa.idtarefa)}}">{{tarefa.titulo|e}}</a>

{% endblock %}

{% block menu_lateral %}

{% endblock %}

{% block content %}


<input type="hidden" id="idturma" value="{{turma.idturma}}">

<main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-grid demo-content">
        <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">

        {% if session.errors %}
            <div class="card-panel white-text orange darken-4">{{session.errors}}</div>
        {% endif %}
        
        <form id='respostaForm' method="POST" action="{{base_url('alunoturma/responderTarefa/' ~ tarefa.idtarefa)}}" accept-charset="UTF-8" enctype="multipart/form-data">

            <div class="row">
                <div class="input-field col s8">
                </div>
                <div class="input-field col s4">
                    
                    {% if nota == "" %}
                        Esta tarefa ainda não foi corrigida, valerá {{tarefa.nota_max}}.
                    {% else %}

                        {% if nota < tarefa.nota_max * 0.5 %}
                            <div class="card-panel orange darken-4">
                        {% elseif nota < tarefa.nota_max * 0.7 %}
                            <div class="card-panel lime accent-3">
                        {% elseif nota < tarefa.nota_max * 0.9 %}
                            <div class="card-panel green accent-3">
                        {% else %}             
                            <div class="card-panel green accent-4">
                        {% endif %}
                        
                            Nota obtida: {{nota}}/{{tarefa.nota_max}}
                        </div>
                    {% endif %}
                    
                </div>
            </div>


            <div class="row">
                <div class="col s12">
                    {{tarefa.texto|e}}
                </div>
            </div>


            <div class="row">
                <div class="input-field col s12">
                {% for arq in arquivos %}
                <a target="_BLANK" href="{{base_url(arq.caminho)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                <img src="{{base_url('assets/imgs/' ~ arq.ext ~ '.png')}}"> {{arq.nome}}
                </a>
                {% endfor %}
                </div>
            </div>


            
                        
            <div class="row">
                <div class="input-field col s12">
                    Responda essa tarefa
                    <input name="arquivo"  type="file" />
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <button type="submit" class='indigo lighten-1 btn waves-effect waves-green'>Enviar</button>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">

                {% if voltar %}
                    <a href="{{base_url('alunoturma/tarefa/' ~ tarefa.idtarefa ~ voltar)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                        <img src="{{base_url('assets/imgs/back_folder.png')}}"> ..
                    </a>
                {% endif %}

                {% for resp in respostas %}
                

                {% if resp.exists %}
                    <div>
                    {% if resp.ext == "folder" %}
                        <a href="{{base_url("alunoturma/tarefa/" ~ tarefa.idtarefa ~ resp.caminho_exec)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect tooltipped" data-position="right" data-tooltip="{{resp.data}}">
                    {% else %}
                        <a target="_BLANK" href="{{base_url('uploads/' ~ tarefa.idtarefa ~ resp.caminho_exec)}}" class="mdl-button mdl-js-button mdl-js-ripple-effect tooltipped" data-position="right" data-tooltip="{{resp.data}}">
                    {% endif %}

                    <img src="{{base_url('assets/imgs/' ~ resp.ext ~ '.png')}}"> {{resp.nome}}
                    </a>

                    <a href="#" onclick="deletarArquivo({{tarefa.idtarefa}},'{{(resp.idarquivo)}}')">
                        <img src="{{base_url('assets/imgs/delete.png')}}" />
                    </a>
                    
                    {% if resp.can_read %}
                        <a href="{{base_url('alunoturma/verarquivo/' ~ tarefa.idtarefa ~ '/' ~ resp.idarquivo)}}">
                            <img src="{{base_url('assets/imgs/view.png')}}" />
                        </a>
                    {% endif %}

                    {% if resp.qtd_correcoes > 0 %}
                        <span class='lime lighten-2 qtdCorrecoes'>{{resp.qtd_correcoes}}</span>
                    {% endif %}
                    </div>

                {% else %}
                    <div>
                        <a href="#" class="mdl-button mdl-js-button mdl-js-ripple-effect tooltipped" data-position="right" data-tooltip="{{resp.data}}">
                            <img src="{{base_url('assets/imgs/' ~ resp.ext ~ '.png')}}"> {{resp.nome}}
                        </a>
                        <a href="#" onclick="deletarArquivo({{tarefa.idtarefa}},'{{(resp.idarquivo)}}')">
                            <img src="{{base_url('assets/imgs/delete.png')}}" />
                        </a>

                        
                    </div>
                {% endif %}

                {% endfor %}
                </div>
            </div>

            
        </form>

        </div>
    </div>
</main>


{% endblock %}